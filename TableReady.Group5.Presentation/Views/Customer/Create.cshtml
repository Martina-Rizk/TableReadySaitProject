@model TableReady.Group5.Domain.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign up</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            content: "";
            background-image: url("../../images/background1.jpeg");
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }

        .main {
            margin-top: 80px;
            border-radius: 15px;
            background-color: white;
            max-width: 500px;
            height: auto;
        }

        .signup { /*sign up button*/
            height: 50px;
            width: 460px;
            background-color: #cc0044;
            border-style: none;
            border-radius: 8px;
            color: white;
            font-size: 25px;
            margin-bottom: 10px;
            margin-top: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        input { 
            border-radius: 8px;
            border: solid;
            border-color: #e6e6e6;
            margin: 0px;
        }

        img { /*logo image*/
            width: 200px;
            height: 80px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        span{
            color: #cc0044;
        }
    </style>
</head>
<body>
    <div class="container main mx-auto">
        <a asp-controller="HomePage" asp-action="Index"><img src="~/images/logo.png" /></a>
        <h3>Create new accout</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="form-row">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control input1" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control input1" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control input1" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control input1" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-4">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control input2" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="State" class="control-label"></label>
                        <input asp-for="State" class="form-control input2" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control input2" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <input type="submit" value="Sign up" class="signup" id="submitButton" />
                </div>
            </div>
        </form>

        <div style="padding-left:15px; margin-bottom:20px;">
            <a asp-controller="" asp-action="Index">Back to Home!</a>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid" style="text-align:center; padding-top:0; background-color: white;">
            &copy; 2020 - TableReady.Group5 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
